# LLM Provider API Keys
OPENAI_API_KEY=your-openai-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
COHERE_API_KEY=your-cohere-api-key-here
TOGETHER_API_KEY=your-together-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here
MISTRAL_API_KEY=your-mistral-api-key-here

# Optional: Default model configuration
# OPENAI_MODEL=gpt-4o-mini

# Optional: Default temperature
# OPENAI_TEMPERATURE=0.1

# Optional: Default reasoning effort (low, medium, high)
# OPENAI_REASONING_EFFORT=low

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Session Configuration
# SESSION_PROVIDER: Session storage provider (file, database, gnosari_api)
# - file: SQLite file-based storage (default, suitable for development)  
# - database: External database storage (suitable for production)
# - gnosari_api: Store sessions via Gnosari API (distributed, uses context storage)
SESSION_PROVIDER=file

# SESSION_DATABASE_URL: Database connection URL
# For file provider (SQLite):
SESSION_DATABASE_URL=sqlite+aiosqlite:///conversations.db

# For database provider (PostgreSQL - recommended for production):
# SESSION_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/gnosari_sessions

# For database provider (MySQL):
# SESSION_DATABASE_URL=mysql+aiomysql://username:password@localhost:3306/gnosari_sessions

# Gnosari API Integration (for gnosari_api and hybrid providers)
# GNOSARI_API_BASE_URL: Base URL of the Gnosari API backend
# GNOSARI_API_KEY: API key for authentication with the Gnosari API
# GNOSARI_API_BASE_URL=http://localhost:8001
# GNOSARI_API_KEY=your-api-key-here

# Queue System Configuration (Celery with Redis)
# CELERY_BROKER_URL: Redis broker URL for Celery task queue
# CELERY_RESULT_BACKEND: Redis result backend for Celery task results
# Default values work with docker-compose Redis service
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Flower Monitoring UI Configuration  
# FLOWER_PORT: Port for Flower web UI (default: 5555)
# FLOWER_BASIC_AUTH: Basic authentication for Flower UI (format: user:password)
# FLOWER_PORT=5555
# FLOWER_BASIC_AUTH=admin:admin
